.page
{
    :link
    {
        transition: all $transition-delay;
        text-decoration: none;

        color: $link;

        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    }

    :visited
    {
        color: $linkVisited;
    }

    :link:hover,
    :visited:hover
    {
        color: $linkHover;
    }
}
